<!-- Available unassigned employees****************-->
<div class="col-sm-6" style="background-color:#aaa;">
	<h4> Following are the available employees </h4>
	<div >
	    <%= form_tag assign_employee_put_admin_index_path,  method: :put do %> 
	  		<table >
			    <tr>
			      <th></th>
			      <th>User Name</th>
				</tr>
				<%  for e in @employees %>
					<tr>
						<td><%= check_box_tag "employee_ids[]", e.id %></td>
				    	<td><%= e.username%></td>
				    	<td><%= find_usertype(e) %></td>
				    </tr>
				<% end %>
			</table>
			<%= hidden_field_tag(:tid, @tl.id) %>
			<%= submit_tag "Assign",class:  "button" %>
		<% end %>
	</div>
</div>
