<!-- All developers****************************-->
<div class="column" style="background-color:#fff;">
	<h2>Developers</h2>
	<table class="table table-hover" Style="overflow-x:auto ;overflow-y:auto ;">
		<tr>
	      <th>Developers</th>
	      <th>Assigned to</th>
	      <th> </th>
	      <th></th>
	    </tr>
		<% for u in @ds %>
			<tr>
				<td><%= u.username %> </td>
				<td><% if u.teamlead_id == current_user.id %>
						<strong>Not under any TL</strong>
					<% else %>
						Assigned to <%=find_tlead(u) %>
					<% end %>
				</td>
				<td><%= link_to " Make Team Lead ", make_teamlead_path(u), method: :patch %></td>
				<td><%= link_to 'Delete Employee'  , admin_employee_path(u), method: :delete, data: {confirm: "Are you sure?"} %></td>
			</tr>
		<% end %>
	</table>
</div>