<tr>
  <th></th>
  <th>Task ID</th>
  <th>Task Name</th>
  <th>Task Type</th>
  <th>Project</th>
  <th>Assigned Date</th>
  <th>End Date</th>
  <th>Status</th>
  <th></th>
</tr>

<% if @tks != nil %>
    <% @tks.each do |t| %>
	    <tr>
		  	<td>
		    	<% if t.assigned? or t.marked? %>
		    		<%= check_box_tag "tasks_ids[]", t.id %>
				<% end%>
			</td>

			<td><%=t.id%></td>

			<td><%= t.name %></td>

			<td> <%= find_task_type(t)%> </td>

			<td> <%= find_project(t) %> </td>

			<td><%= t.updated_at.strftime(" %d-%m-%Y")  %></td>

			<td>
				<% if t.end != nil %>
		    		<%= t.end.strftime(" %d-%m-%Y") %>
		    	<% end %>
		    </td>
		
		    <td> <%=find_status(t)%> </td>

			<td><%= link_to ' Show ', task_path(t)%></td>
		</tr>
	<% end%>
<%end%>